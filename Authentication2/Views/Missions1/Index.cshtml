@model Authentication2.Models.Missions

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<link href="~/Content/MissionStyle.css" rel="stylesheet" />
@{
    ViewBag.Title = "MissionInfo";
}
<link href="~/Content/MissionStyle.css" rel="stylesheet" />
<!--The breadcrumb shows you the path of views you took to get to the current location. You can choose to go back from this-->
<ul class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Missions", "Index", "Missions")</li>
    <li>@Html.DisplayFor(model => model.MissionName)</li>
</ul>
<!--Displays the mission name-->
<div class="jumbotron">
    <h1 class="MissionName">
        <b>@Html.DisplayFor(model => model.MissionName)</b>
    </h1>
</div>
<!--Displays the mission information, and pulls the information from parameters passed-->
<div class="row">
    <div class="col-md-4">
        <h3><b>President's Name</b></h3>
        <h4>@Html.DisplayFor(model => model.PresidentName)</h4>
    </div>
    <div class="col-md-4">
        <h3><b>Mission Address</b></h3>
        <h4>@Html.DisplayFor(model => model.Address)</h4>
    </div>
    <div class="col-md-4">
        <h3><b>Language</b></h3>
        <h4>@Html.DisplayFor(model => model.Language)</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h3><b>Climate</b></h3>
        <h4>@Html.DisplayFor(model => model.Climate)</h4>
    </div>
    <div class="col-md-4">
        <h3><b>Dominant Religion</b></h3>
        <h4>@Html.DisplayFor(model => model.Religion)</h4>
    </div>
    <div class="col-md-4">
        <h3><b>"A missionary is not called to a place; rather, he or she is called to serve." ~David A. Bednar</b></h3>
    </div>
</div>
<!--Displays the mission flag in the shape of a circle-->
<div><img src="~/Content/Images/@(Model.Picture).png" style="width:100%;" class="img-circle"></div>


<div class="row">
    <h2>Frequently Asked Questions (FAQ)</h2>
    <br />
    <br />
    <div class="form-horizontal">
        @foreach (var item in ViewBag.questions)
        {
            <div class="row">
                <div class="col-xs-6">
                    <p><b>Q:</b> @item.Question</p>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-1"></div>
                <div class="col-xs-6">
                    <p><b>A:</b> @item.Answer</p>
                </div>
            </div>

        <!--form where users can input answers to respond to the questions. Currently when they submit it resets and clears the text box-->
            @*using (Html.BeginForm("FAQAnswers", "Missions", FormMethod.Post))
            {
                <label for="inputReply" class="sr-only">Type your answer here</label>
                @Html.TextBox("New Reply")
                <button type="submit" class="btn">Reply</button>
            }*@
            <br />
        }
    </div>


    <br />
    <br />


    
    <div class="form-horizontal">
        <h4>Enter a new question</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <input name="question"
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>








    <h2>Enter a new question</h2>
    @using (Html.BeginForm("FAQAnswers", "Missions", FormMethod.Post))
    {
        <label for="inputReply" class="sr-only">Type your answer here</label>
            @Html.TextBox("New Reply")
            <button type="reset" class="btn">Submit</button>
    }
</div>

